<calculatorWindow>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint: 1,0.2
        TextInput:
            id: display
            hint_text: "0"
            font_size: (self.height+self.width/6)/4
            multiline: False

    GridLayout:
        size_hint: 1, 0.8
        spacing: 10
        cols: 4
        rows: 4
        Button:
            font_size: (self.height+self.width/6)/4
            text: "7"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "8"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "9"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "+"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "4"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "5"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "6"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "-"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "1"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "2"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "3"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "*"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "AC"
            on_press: display.text = ""
        Button:
            font_size: (self.height+self.width/6)/4
            text: "0"
            on_press: display.text += self.text
        Button:
            font_size: (self.height+self.width/6)/4
            text: "="
            on_press: root.evaluate(display.text)
        Button:
            font_size: (self.height+self.width/6)/4
            text: "/"
            on_press: display.text += self.text
