<CalculatorWindow>:
    orientation: "vertical"
    spacing: 10

    BoxLayout:
        padding: 10
        size_hint: 1,0.2
        BoxLayout:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    Color:
                        rgba: (1,1,1,1)
            Label:
                text: "0"
                color: 0,0,0,1
                text_size: self.size
                font_size: self.height /2
                halign: "left"

    BoxLayout:
        padding: 10
        size_hint: 1,0.8
        GridLayout:
            cols: 4
            rows: 4
            spacing: 20
            Button:
                text: "7"
                font_size: self.height/2
            Button:
                text: "8"
                font_size: self.height/2
            Button:
                text: "9"
                font_size: self.height/2
            Button:
                text: "/"
                font_size: self.height/2
            Button:
                text: "4"
                font_size: self.height/2
            Button:
                text: "5"
                font_size: self.height/2
            Button:
                text: "6"
                font_size: self.height/2
            Button:
                text: "x"
                font_size: self.height/2
            Button:
                text: "1"
                font_size: self.height/2
            Button:
                text: "2"
                font_size: self.height/2
            Button:
                text: "3"
                font_size: self.height/2
            Button:
                text: "-"
                font_size: self.height/2
            Button:
                text: "0"
                font_size: self.height/2
            Button:
                text: "C"
                font_size: self.height/2
            Button:
                text: "="
                font_size: self.height/2
            Button:
                text: "+"
                font_size: self.height/2