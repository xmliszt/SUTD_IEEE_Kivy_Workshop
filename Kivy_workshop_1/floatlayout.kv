<LayoutWindow>:
    Button:
        text: "Top Left"
        size_hint: None, None
        height: 200
        width: 300
        pos_hint: {"x":0, "top":1}
    Button:
        text: "Bottom Left"
        size_hint: None, None
        height: 200
        width: 300
        pos_hint: {"x":0, "bottom":0}
    Button:
        text: "Top Right"
        size_hint: None, None
        height: 200
        width: 300
        pos_hint: {"right":1, "top":1}
    Button:
        text: "Bottom Right"
        size_hint: None, None
        height: 200
        width: 300
        pos_hint: {"right":1, "bottom":0}
    Button:
        text: "Center"
        size_hint: None, None
        height: 200
        width: 300
        pos_hint: {"center_x":0.5, "center_y":0.5}